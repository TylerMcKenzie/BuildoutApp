<div id="property">
	<div id="myCarousel" class="carousel slide" data-ride="carousel">

		<!-- Wrapper for slides -->
		<div class="carousel-inner" role="listbox">
			<% @property['photos'].each_with_index do |photo, index| %>
			<div class="item
			<% if index == 0 %>
			active
			<% end %>">
			<img src="<%= photo['url'] %>">
		</div>
		<% end %>
	</div>

	<!-- Left and right controls -->
	<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
	</div>

	<div id="property-info">
		<ul>
			<li><strong>Listing Name:</strong> <%= @property['name'] %></li>
			<li><strong>Address:</strong> <%= @property['address'] %>, <%= @property['city'] %>, <%= @property['state'] %> <%= @property['zip'] %></li>
			<% if @property['sale_price_dollars'] %>
			<li><strong>Listing Price:</strong> $<%= @property['sale_price_dollars'] %></li>
			<% end %>
			<li><strong>Size:</strong> <%= @property['lot_size_acres'] %> acres</li>
			<li><strong>Build in:</strong> <%= @property['year_built'] %></li>
		</ul>
		<p><strong>Description:</strong> <%= @property['location_description'] %></p>
	</div>

	<div id="lease-info">
		<h3>Leasing</h3>
		<ul class="lease-ul">
			<li><strong>Desc:</strong> <%= @property['lease_description'] %></li>
			<li><strong>Bullets:</strong> 
				<ul>
					<% @property['lease_bullets'].each do |b| %>
					<li><%= b %></li>
					<% end %>
				</ul>
			</li>
			<li><stong>Lease Site:</strong> <a href="<%= @property['sale_listing_url'] %>"><%= @property['sale_listing_url'] %></a></li>
		</ul>
	</div>

	<div id="brokers-info">
		<ul class="broker-list">
			<% @brokers.each do |broker| %>
			<li class="broker">
				<div>
					<img src="<%= broker['profile_photo_url'] %>"/>
					<ul>
						<li><%= broker['first_name'] %> <%= broker['last_name'] %></li>
						<li><%= broker['address'] %></li>
						<li><%= broker['job_title'] %></li>
						<li><a href="mailto:<%= broker['email'] %>"><%= broker['email'] %></a></li>
						<li>(CELL) <%= broker['cell_phone'] %></li>
						<li>(OFFICE) <%= broker['phone_number'] %></li>
					</ul>
				</div>
			</li>
			<% end %>
		</ul>
	</div>
</div>